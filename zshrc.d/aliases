alias gitconfig="vim ~/.gitconfig"
alias vimrc="vim ~/.vimrc"
alias zshenv="vim ~/.zshenv"
alias zshrc="vim ~/.zshrc"
alias aliases="vim ~/.aliases"
alias waliases="[ -f ~/.work_aliases ] && vim ~/.work_aliases"
alias funcs="vim ~/.funcs"

alias grep="grep -i --color"
alias g="git"
alias v="vim"
alias vbig='f() {vim -u "NONE" $1 };f'
alias s="sbt"
alias br="brew"
alias rm="rm -i"
alias python=python3
alias pip=pip3
alias gc=gcloud
alias tmux="tmux -u"
alias d="docker"
alias dc="docker-compose"
alias copy="xclip -sel clip"
alias p="python3"
alias ipy="python -c 'import IPython; IPython.terminal.ipapp.launch_new_instance()'"
alias e="exa --long -a -h --git"
alias update_tags="ctags -R --fields=+l --languages=python --python-kinds=-iv -f ./tags $(python -c "import os, sys; print(' '.join('{}'.format(d) for d in sys.path if os.path.isdir(d)))") ./"
alias wn1="watch -n 1"

alias vf='ls -d ~/.virtualenv/*/ | fzf | while read file; do source "$file/bin/activate"; done'
alias fdf="fzf --preview 'bat --style=numbers --color=always {} | head -500'"
